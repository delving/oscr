<?xml version="1.0"?>
<Schemas>

    <Vocabulary>
        <PhotoType>
            <URI/>
        </PhotoType>
        <SourceType/>
        <Publisher/>
        <Genre/>
        <BitRate/>
        <VideoEncoding/>
        <SourceType/>
        <Actor/>
        <Place/>
        <Technique/>
        <Material/>
        <Rights/>
        <StorageLocationType/>
        <PhotoCondition/>
        <AuthenticityLevel/>
        <PhotoISO/>
        <PhotoExposure/>
        <PhotoAperture/>
        <PhotoFocalLength/>
        <PhotoColorDepth/>
        <MediaCollection>
            <Code/>
        </MediaCollection>
    </Vocabulary>

    <Document>

        <Photo>
            <Title>{ "required": true, "summaryField": "Title" }</Title>
            <Type>{ "vocabulary": "PhotoType" }</Type>
            <ShortDescription>{ "paragraph":true }</ShortDescription>
            <Authenticity>{ "vocabulary": "AuthenticityLevel" }</Authenticity>
            <Condition>{ "vocabulary": "PhotoCondition" }</Condition>
            <Purpose/>
            <Collection/>
            <MediaFile>{ "multiple":true }
                <File>{ "media": "ImageMetadata"}</File>
                <Comment/>
            </MediaFile>
            <Rights>{ "vocabulary": "Rights" }</Rights>
            <Source>
                <IdentificationNumber>
                    <URI/>
                </IdentificationNumber>
                <Type>{ "vocabulary": "SourceType" }</Type>
                <Title/>
                <Description>{ "paragraph":true }</Description>
            </Source>
            <StorageLocation>
                <Type>{ "vocabulary": "StorageLocationType" }</Type>
                <Name/>
                <Description/>
            </StorageLocation>
            <Creation>
                <CreationDate>{ "validator": "date" }</CreationDate>
                <Creator>{ "required": true, "vocabulary": "Actor", "multiple":true }</Creator>
                <CreationPlace>{ "vocabulary": "Place" }</CreationPlace>
                <Technique>{ "vocabulary": "Technique" }</Technique>
                <Material>{ "vocabulary": "Material" }</Material>
            </Creation>
            <TechnicalDescription>
                <Dimension>{ "validator": "pixels" }</Dimension>
                <CameraSettings>
                    <ISO>{ "vocabulary": "PhotoISO" }</ISO>
                    <ExposureTime>{ "vocabulary": "PhotoExposure" }</ExposureTime>
                    <LensAperture>{ "vocabulary": "PhotoAperture" }</LensAperture>
                    <FocalLength>{ "vocabulary": "PhotoFocalLength" }</FocalLength>
                </CameraSettings>
                <Digitization>
                    <DPIResolution>{ "validator": "DPI" }</DPIResolution>
                    <ColorDepth>{ "vocabulary": "PhotoColorDepth" }</ColorDepth>
                </Digitization>
                <Exif/>
            </TechnicalDescription>
        </Photo>

        <InMemoriam>
            <PersonName>{ "required": true, "summaryField": "Title" }</PersonName>
            <Birth>
                <DateOfBirth>{ "required": true, "validator": "date", "input": "date" }</DateOfBirth>
                <PlaceOfBirth>{ "vocabulary": "Place" }</PlaceOfBirth>
            </Birth>
            <Death>
                <DateOfDeath>{ "required": true, "validator": "date", "summaryField": "DateOfDeath" }</DateOfDeath>
                <PlaceOfDeath>{ "vocabulary": "Place" }</PlaceOfDeath>
            </Death>
            <Funeral>
                <DateOfFuneral>{ "validator": "date" }</DateOfFuneral>
                <PlaceOfFuneral>{ "vocabulary": "Place" }</PlaceOfFuneral>
            </Funeral>
            <Text>{ "paragraph":true }</Text>
            <MediaFile>
                <File>{ "media": "ImageMetadata" }</File>
                <Comment/>
            </MediaFile>
        </InMemoriam>

        <Video>
            <Title>{ "required":true }</Title>
            <Genre>{ "vocabulary": "Genre" }</Genre>
            <Description>{ "paragraph":true }</Description>
            <Creation>
                <CreationDate>{ "validator": "date" }</CreationDate>
                <Creator>{"vocabulary": "Actor", "multiple":true }</Creator>
                <CreationPlace>{ "vocabulary": "Place" }</CreationPlace>
            </Creation>
            <Publication>
                <PublicationDate>{ "validator": "date" }</PublicationDate>
                <Publisher>{ "vocabulary": "Publisher" }</Publisher>
            </Publication>
            <VideoAttributes>
                <Bitrate>{ "vocabulary": "BitRate" }</Bitrate>
                <Dimension>{ "validator": "pixels" }</Dimension>
                <Duration>{ "validator": "time" }</Duration>
                <EncodingFormat>{ "vocabulary": "VideoEncoding" }</EncodingFormat>
                <PlayerType/>
            </VideoAttributes>
            <Transcription>
                <TranscriptionUri/>
                <TranscriptionText>{ "paragraph":true}</TranscriptionText>
            </Transcription>
            <MediaFile>
                <File>{ "media": "ImageMetadata"}</File>
                <Comment/>
            </MediaFile>
        </Video>

        <ImageMetadata>
            <Collection>{ "vocabulary": "MediaCollection" }</Collection>
            <Description>{ "paragraph":true, "summaryField":"Label" }</Description>
        </ImageMetadata>


    </Document>

</Schemas>

